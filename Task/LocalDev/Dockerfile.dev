# Use the official .NET 10 SDK image for development
FROM mcr.microsoft.com/dotnet/sdk:10.0
WORKDIR /app

# Set environment variables to force HTTP only
ENV ASPNETCORE_ENVIRONMENT=Development
ENV ASPNETCORE_URLS=http://+:5000
ENV ASPNETCORE_HTTPS_PORT=

# Install curl for health checks and wget for vsdbg installation
RUN apt-get update && apt-get install -y curl wget && rm -rf /var/lib/apt/lists/*

# Install vsdbg for remote debugging with Rider and other IDEs
RUN wget -q https://aka.ms/getvsdbgsh && \
    sh getvsdbgsh -v latest -l /vsdbg && \
    rm getvsdbgsh

# Expose port
EXPOSE 5000

# Run the application with dotnet watch for hot reload
# Note: Source code is mounted as a volume in docker-compose.yml
ENTRYPOINT ["dotnet", "watch", "run", "--project", "src/Server.Web/Server.Web.csproj", "--no-hot-reload", "--urls", "http://0.0.0.0:5000"]
