  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "packages": {},
        "exec": [
          "// Generate and set correlation ID for this request",
          "const correlationId = pm.variables.replaceIn('{{$randomUUID}}');",
          "pm.collectionVariables.set('correlationId', correlationId);",
          "pm.request.headers.add({",
          "    key: 'X-Correlation-Id',",
          "    value: correlationId",
          "});",
          "",
          "utils = {",
          "    assertErrorStartsWith: function(fieldName, pm) {",
          "        const response = pm.response.json();",
          "        // Handle ProblemDetails format: errors is an array of {name, reason}",
          "        const errors = response.errors || [];",
          "        const hasFieldError = errors.some(err => err.name === fieldName || err.name.startsWith(fieldName));",
          "        pm.test(`At least one error for field '${fieldName}'`, function () {",
          "            pm.expect(hasFieldError).to.be.true;",
          "        });",
          "    }",
          "}",
          "",
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "packages": {},
        "exec": [
          "// Monkey-patch pm.test to prepend correlation ID",
          "if (!pm.collectionVariables.get('pmTestPatched')) {",
          "    const originalTest = pm.test;",
          "    pm.test = function(testName, testFunction) {",
          "        const correlationId = pm.collectionVariables.get('correlationId') || 'unknown';",
          "        const prefixedName = `[${correlationId}] ${testName}`;",
          "        return originalTest(prefixedName, testFunction);",
          "    };",
          "    pm.collectionVariables.set('pmTestPatched', 'true');",
          "}",
          "",
          "",
          ""
        ]
      }
    }
